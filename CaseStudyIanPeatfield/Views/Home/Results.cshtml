@{
    ViewBag.Title = "Home Page";
}
@model  CaseStudyIanPeatfield.Models.ResultsViewModel
@using CaseStudyIanPeatfield.Controllers

<script>
    $(document).ready(function () {


        $('#Datatable').dataTable({
            /*'dom': '<lf<t>ip>',*/
            'dom':
                "<'row'<'col-sm-6'l><'col-sm-6'f>>" +
                "<'row'<'col-sm-5'i>>" +
                "<'row'<'col-sm-12'tr>>" +
                "<'row'<'col-sm-12'p>>",
            "columns": [                
                null,
                null,
                null,
                { type: 'date-eu', targets: 0 },
                null,
                null,                
            ],
            "order": [[0, 'asc'], [1, 'asc']],
            "pageLength": 25,
            "language": {
                "search": "Filter Results:"
            }
        });
    });

    
</script>




<div class="row" style="margin-top:42px;">
    <div class="col-md-12" style="margin-top:100px">
        <table id="Datatable" class="table table-striped table-bordered" cellspacing="0" style="width:100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Application.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Application.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Application.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Application.DOB)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Application.AnnualIncome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Application.ApplicationResult.ShortDescription)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Applications)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @item.DOB.ToString("dd/MM/yyyy")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AnnualIncome)
                        </td>
                        <td style="text-align: center;">
                            @Html.DisplayFor(modelItem => item.ApplicationResult.ShortDescription)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


</div>
